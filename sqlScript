CREATE Table adminRoles 
(
    user_id int unsigned not null primary key,
    roles char(10)
);
use PureFrames;
INSERT INTO adminRoles
VALUES (1, "customer"), (2, "admin"), (3, "superAdmin");


CREATE Table users 
(
    id int unsigned not null primary key,
    username varchar(50),
    role char(10),
    email varchar(50),
    contact int,
    created_at timestamp
);
CREATE Table tickets 
(
    ticket_id int unsigned not null primary key,
    isValid boolean,
    hall_id int,
    screening_date datetime,
    screening_time datetime,
    ticket_category_id int,
    barcode char(100),
    created_at timestamp
    
);
CREATE Table ticket_category
(
	ticket_category_id int unsigned not null primary key, 
    ticket_category_name varchar(100),
    ticket_price float(4,2)
);

CREATE Table halls 
(
    hall_id int unsigned not null primary key,
    opening_hours varchar(100),
    avail_seats int,
    created_at timestamp
);
CREATE Table seats 
(
    seat_id int unsigned not null primary key,
    hall_id int,
    state char(10),
    created_at timestamp
);
CREATE Table movies 
(
    movie_id INT AUTO_INCREMENT PRIMARY KEY,
    movie_title varchar(255),
    sypnopsis varchar(255),
    casts char(255),
    screening_dates datetime,
    screening_time datetime,
    price float(4,2),
    ratings int
);

CREATE Table moviePosters
(
    movie_id INT AUTO_INCREMENT PRIMARY KEY,
    movie_data LONGBLOB,
    movie_name VARCHAR(255)
);

CREATE TABLE advertisements 
(
    id INT AUTO_INCREMENT PRIMARY KEY,
    image_data LONGBLOB,
    image_name VARCHAR(255)
);
CREATE Table profiles
(
    profile_id int unsigned not null primary key,
    picture varchar(100),
    genres varchar(100),
    preferred varchar(100)
);

